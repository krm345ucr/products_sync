<!DOCTYPE html>
<html>
<head>
  <title>Products Sync</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <style>
    body {
      font-family: system-ui;
      background:#f6f7fb;
      padding:40px;
    }

    .container {
      max-width:1000px;
      margin:auto;
    }

    h1 {
      margin:0;
    }

    .header {
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin-bottom:20px;
    }

    .header-actions {
      display:flex;
      gap:10px;
    }

    .btn {
      background:#2563eb;
      color:white;
      padding:8px 14px;
      border-radius:6px;
      text-decoration:none;
      border:none;
      cursor:pointer;
    }

    .btn-danger {
      background:#ef4444;
    }

    .btn-secondary {
      background:#64748b;
    }

    .table {
      width:100%;
      border-collapse:collapse;
      background:white;
      border-radius:10px;
      overflow:hidden;
      box-shadow:0 4px 10px rgba(0,0,0,.05);
    }

    .table th {
      background:#f1f3f6;
      padding:12px;
      text-align:left;
      font-size:14px;
    }

    .table td {
      padding:12px;
      border-top:1px solid #eee;
    }

    .table tr:hover {
      background:#fafafa;
    }

    .actions {
      display:flex;
      gap:8px;
    }

    .flash {
      padding:10px;
      border-radius:6px;
      margin-bottom:15px;
    }

    .notice { background:#dcfce7; }
    .alert { background:#fee2e2; }
  </style>
</head>

<body>
<div class="container">

  <% flash.each do |type, message| %>
    <div class="flash <%= type %>"><%= message %></div>
  <% end %>

  <%= yield %>

</div>
</body>
</html>
